<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round_frame"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/events_item_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/image_light_gradient" />

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/events_item_image"
        app:layout_anchorGravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/events_name"
            android:textColor="@android:color/black"
            android:typeface="serif"
            android:layout_marginBottom="8dp"
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name" />

        <TextView
            android:id="@+id/events_date"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Date" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>